enum Date{
    Day(u8),
    Week(u8),
    Month(u8),
    YearToDate, // days of current year
    Max
}
impl Date {
    fn as_str(&self) -> String {
        match &self{
            Date::Day(d) =>  format!("{:?}d", d),
            Date::Week(wk) =>  format!("{:?}wk", wk),
            Date::Month(mo) =>  format!("{:?}mo", mo),
            Date::YearToDate => format!("ytd"),
            Date::Max =>  format!("max"),
        }
    }
}

